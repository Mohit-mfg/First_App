        <Button
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>
    </LinearLayout>

</RelativeLayout>